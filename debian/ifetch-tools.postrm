#!/bin/sh

set -e

case "${1}" in
	remove)
		if [ -x /usr/sbin/deluser ]
		then
			deluser --quiet --system ifetch-tools
		fi

		if [ -x /usr/sbin/delgroup ]
		then
			delgroup --quiet --system --only-if-empty ifetch-tools || true
		fi
		;;

	purge)
		if [ -e /usr/share/debconf/confmodule ]
		then
			. /usr/share/debconf/confmodule

			db_input high ifetch-tools/purge || true
			db_go || true
			db_get ifetch-tools/purge || true

			PURGE="${RET}"
		fi

		if [ "${PURGE}" != "false" ]
		then
			rm -rf /etc/ifetch-tools
			rm -rf /var/lib/ifetch-tools
			rm -rf /var/log/ifetch-tools
		fi

		rm -rf /var/run/ifetch-tools*
		;;

	upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)

		;;

	*)
		echo "postrm called with unknown argument \`${1}'" >&2
		exit 1
		;;
esac

#DEBHELPER#

exit 0
